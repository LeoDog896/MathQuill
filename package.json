{
  "name": "mathquill",
  "description": "Easily type math in your webapp",
  "version": "0.10.1",
  "type": "module",
  "license": "MPL-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/mathquill/mathquill.git"
  },
  "files": [
    "build/mathquill.{css,js,min.js}",
    "build/fonts/Symbola.*",
    "quickstart.html"
  ],
  "devDependencies": {
    "@types/less": "^3.0.3",
    "@types/mocha": "^9.1.1",
    "@types/node": "^17.0.42",
    "http-server": "^14.1.1",
    "husky": "^8.0.1",
    "less": "^2.7.3",
    "lint-staged": "^13.0.1",
    "mocha": "^10.0.0",
    "nodemon": "^2.0.16",
    "prettier": "^2.6.2",
    "terser": "^5.14.0",
    "typescript": "^4.7.3"
  },
  "lint-staged": {
    "*.{ts,js,css,html}": "prettier --write"
  },
  "scripts": {
    "prepare": "husky install",
    "prettify": "npx prettier --write '**/*.{ts,js,css,html}'",
    "build": "npm run build:scripts && node script/dist/build.js",
    "build:scripts": "tsc -p script/tsconfig.json",
    "start": "npm run build && http-server",
    "dev": "nodemon --watch src --watch script --watch test --ignore script/dist -e ts,js,html --exec \"npm run start\"",
    "lint": "npx tsc --noEmit && npx tsc --noEmit -p test/tsconfig.public-types-test.json"
  }
}
